<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_homescreen"
    tools:context=".PrivacyMessages">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:paddingTop="30dp"
            android:paddingLeft="10dp"
            android:orientation="horizontal">
            <!--Note: [when merging] Changed from Button to ImageButton -->
            <ImageButton
                android:id="@+id/button8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/settings_black_back_arrow"
                android:typeface="serif" /> </LinearLayout>

        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="85dp"
            android:paddingLeft="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/notifications_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/privacy_header" /> </LinearLayout>

    </LinearLayout>

    <!--Note: Changed from TextView to ImageView -->
    <ImageView
        android:id="@+id/textView11"
        android:layout_width="360dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/privacy_subheader"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="118dp" />

    <Switch
        android:id="@+id/switch7"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:textSize="18dp"
        android:paddingLeft="40dp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="390dp"
        android:text="@string/everyone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        android:layout_alignParentLeft="true"
        tools:layout_editor_absoluteY="330dp"
        android:layout_marginLeft="8dp" />

    <Switch
        android:id="@+id/switch8"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:textSize="18dp"
        android:paddingLeft="40dp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="320dp"
        android:text="@string/only_people_in_my_class"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="290dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp" />

    <Switch
        android:id="@+id/switch9"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:textSize="18dp"
        android:paddingLeft="40dp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="250dp"
        android:text="Only My Professors"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="320dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left" />

</RelativeLayout>
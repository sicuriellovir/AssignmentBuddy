<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_homescreen"
    android:gravity="center">

    <!-- Include other widget or layout tags here. These are considered
            "child views" or "children" of the linear layout -->

    <ImageView
        android:id="@+id/fragment_title"
        android:layout_width="314dp"
        android:layout_height="150dp"
        android:layout_marginStart="123dp"
        android:layout_marginLeft="123dp"
        android:layout_marginEnd="124dp"
        android:layout_marginRight="124dp"
        android:src="@drawable/create_account_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.047" />


    <EditText
        android:id="@+id/first_name_edit_text"
        android:layout_width="245dp"
        android:layout_height="40dp"
        android:layout_marginStart="145dp"
        android:layout_marginLeft="145dp"
        android:layout_marginEnd="145dp"
        android:layout_marginRight="145dp"
        android:hint="First Name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.346"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_title" />

    <ImageView
        android:id="@+id/acc_firstname_icon_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="376dp"
        android:scaleType="fitCenter"
        android:src="@drawable/username_icon"
        app:layout_constraintBottom_toBottomOf="@id/fragment_title"
        app:layout_constraintEnd_toStartOf="@+id/first_name_edit_text"
        app:layout_constraintHorizontal_bias="0.839"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/last_name_edit_text"
        app:layout_constraintVertical_bias="0.915" />

    <EditText
        android:id="@+id/last_name_edit_text"
        android:layout_width="245dp"
        android:layout_height="40dp"
        android:layout_marginStart="145dp"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="145dp"
        android:layout_marginRight="145dp"
        android:hint="Last Name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.346"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_name_edit_text" />

    <ImageView
        android:id="@+id/acc_lastname_icon_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="376dp"
        android:scaleType="fitCenter"
        android:src="@drawable/username_icon"
        app:layout_constraintBottom_toBottomOf="@id/acc_firstname_icon_view"
        app:layout_constraintEnd_toStartOf="@+id/last_name_edit_text"
        app:layout_constraintHorizontal_bias="0.839"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/username_edit_text"
        app:layout_constraintVertical_bias="0.893" />

    <EditText
        android:id="@+id/username_edit_text"
        android:layout_width="245dp"
        android:layout_height="40dp"
        android:layout_marginStart="145dp"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="145dp"
        android:layout_marginRight="145dp"
        android:hint="User ID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.346"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/last_name_edit_text" />

    <ImageView
        android:id="@+id/acc_userid_icon_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="376dp"
        android:scaleType="fitCenter"
        android:src="@drawable/username_icon"
        app:layout_constraintBottom_toBottomOf="@id/acc_lastname_icon_view"
        app:layout_constraintEnd_toStartOf="@+id/username_edit_text"
        app:layout_constraintHorizontal_bias="0.839"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_edit_text"
        app:layout_constraintVertical_bias="0.893" />

    <EditText
        android:id="@+id/password_edit_text"
        android:layout_width="245dp"
        android:layout_height="40dp"
        android:layout_marginStart="145dp"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="145dp"
        android:layout_marginRight="145dp"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.346"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/last_name_edit_text" />

    <ImageView
        android:id="@+id/acc_password_icon_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="376dp"
        android:scaleType="fitCenter"
        android:src="@drawable/password_icon"
        app:layout_constraintBottom_toBottomOf="@id/acc_userid_icon_view"
        app:layout_constraintEnd_toStartOf="@+id/password_edit_text"
        app:layout_constraintHorizontal_bias="0.839"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/back_button"
        app:layout_constraintVertical_bias="0.914" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/blue_rounded_button"
        android:text="Back"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_marginBottom="30dp"
        android:text="Submit"
        android:background="@drawable/black_rounded_button"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_edit_text"
        app:layout_constraintVertical_bias="0.247" />


</androidx.constraintlayout.widget.ConstraintLayout>
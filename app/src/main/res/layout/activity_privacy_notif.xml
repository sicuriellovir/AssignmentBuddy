<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_homescreen"
    tools:context=".PrivacyNotif">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="40dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:orientation="horizontal">
            <!--Note: [when merging] Changed from Button to ImageButton -->
            <ImageButton
                android:id="@+id/PrivacyBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/settings_black_back_arrow"
                android:typeface="serif" /> </LinearLayout>

        <LinearLayout
            android:layout_width="310dp"
            android:layout_height="70dp"
            android:paddingLeft="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/change_password_header" /> </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/SubmitButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="68dp"
        android:background="@drawable/black_rounded_button"
        android:text="@string/submit"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="560dp" />

    <ImageView
        android:id="@+id/current_pass_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/password_icon"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="212dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="24dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="   Current Password"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="212dp"
        tools:ignore="LabelFor,MissingConstraints"
        android:autofillHints="" />

    <ImageView
        android:id="@+id/new_pass_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/password_icon"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="325dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="24dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="     New Password"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="325dp"
        tools:ignore="LabelFor,MissingConstraints"
        android:autofillHints="" />

    <ImageView
        android:id="@+id/confirm_new_pass_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/password_icon"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="436dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="24dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint=" Confirm New Password"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="436dp"
        tools:ignore="LabelFor,MissingConstraints"
        android:autofillHints="" />
</androidx.constraintlayout.widget.ConstraintLayout>